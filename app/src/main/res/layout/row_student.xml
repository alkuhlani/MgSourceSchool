<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:padding="5dp">
            <ImageView
                android:id="@+id/img_student_row"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:padding="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:padding="5dp">



            <TextView
                android:id="@+id/txt_name_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="ahmed"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/txt_name_row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ahmed"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_name_row22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ahmed"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/txt_name_row24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ahmed"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_class_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="class"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txt_note_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/colorButton"
                android:textSize="20sp"
                 />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
